{% extends 'base.html.twig' %}
{% block title %}Abroncs kategóriák{% endblock %}

{% block body %}
  <h1 class="text-2xl font-bold mb-6">Abroncs kategóriák</h1>

  <div class="mb-6">
    <details class="bg-white rounded border p-4" open>
      <summary class="cursor-pointer font-medium">
        {{ parentPath[0] }} → {{ parentPath[1] }}
      </summary>
      <div class="mt-3 text-sm text-gray-600">
        Itt a "{{ parentPath[0] }} → {{ parentPath[1] }}" ág alatti kategóriák láthatók.
      </div>
    </details>
  </div>

  {% if not level2 %}
    <p class="text-red-600">A megadott kategória-útvonal nem található.</p>
  {% else %}
    {% if level3 is empty %}
      <p>Nincs alkategória.</p>
    {% else %}
      <ul class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
        {% for c in level3 %}
          <li>
            <a href="{{ path('category_show', {id: c.id}) }}"
               class="block bg-white p-4 rounded shadow hover:shadow-md">
              {{ c.name }}
            </a>
          </li>
        {% endfor %}
      </ul>
    {% endif %}
  {% endif %}
{% endblock %}
